<div class=" content-center">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="card">
    <h1 class="font-bold text-4xl text-center">Blog Of the day</h1>
  </div>
  <div id="posts" class="min-w-full">
    <%= render @posts %>
  </div>
</div>
<div class= "container  mx-auto p-8 flex justify-center">
  <%= link_to 'Wright your post', new_post_path, class:"btn btn-accent" %>
</div>
