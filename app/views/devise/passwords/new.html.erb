<div class=" card  w-96 bg-base-200 shadow-lg shadow-cyan-500/70 container mx-auto mt-28 px-5 flex justify-center">
  <div  class=" card-body grid place-items-center md:place-items-center flex justify-center">
    <h2 class= "text-2xl">Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="actions">
        <%= f.submit "Send me reset password instructions" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
